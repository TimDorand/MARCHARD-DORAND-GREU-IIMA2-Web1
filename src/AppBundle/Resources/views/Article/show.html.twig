{% extends "::base.html.twig" %}

{% block title %}
    {{ parent() ~ ' - article' }}
{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="article-container" style="padding-top: 80px;">
    <h1> {{ blog.title }} </h1>
     {{ blog.createdAt|date('m/d/Y H:i') }}
    <p> {{ blog.content }} </p>
    <p> {{ blog.author }} </p>
    </div>

{% endblock %}